<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/dl_drawer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/map_view"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/ibtn_side_menu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:layout_weight="1"
                android:src="@drawable/ic_side_menu" />

            <EditText
                android:id="@+id/et_search_key"
                android:imeOptions="actionSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textColor="@color/black"
                android:hint="검색어를 입력하세요."
                android:textColorHint="#5E5E5E"
                />
            <ImageButton
                android:id="@+id/ibtn_search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:layout_weight="1"
                android:src="@drawable/ic_zoom" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_search"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cat_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

            <ImageButton
                android:id="@+id/ibtn_more_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle_77"
                android:src="@drawable/more_category"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_category"
            >
            <LinearLayout
                android:id="@+id/ll_research"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/research_back"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/research_img"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="10dp"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/research_text"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_show_list"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/rectangle_150"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:clickable="false"
                    android:src="@drawable/group_11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:clickable="false"
                    android:text="리스트 보기"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_zoomer"
            android:layout_width="38dp"
            android:layout_height="79dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <ImageButton
                android:id="@+id/ibtn_zoom_in"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:src="@drawable/ic_plus"
                android:background="#00000000"
                />
            <ImageButton
                android:id="@+id/ibtn_zoom_out"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:src="@drawable/ic_minus"
                android:background="#00000000"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibtn_cur_location"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_below="@+id/ll_zoomer"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gps" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="33dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_above="@id/ll_advertisement"
            android:background="@android:color/white"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_cur_location"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_cur_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#5F58FF"
                android:text="현재 위치"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_advertisement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C4C2FF"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="70dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_profile_picture"
            />
        <View
            android:background="#C4C2FF"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_event_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="이벤트"
                android:textColor="@color/black"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_bookmark_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"/>
            <TextView

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="즐겨찾는 매장"
                android:textColor="@color/black"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_notice_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_bell"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

