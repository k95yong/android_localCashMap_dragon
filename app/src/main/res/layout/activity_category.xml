<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2ff"
    tools:context=".src.main.activities.CategoryActivity">
    <RelativeLayout
        android:id="@+id/rl_category_main"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textColor="#5f58ff"
            android:text="카테고리"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginTop="11dp"
            />
        <ImageButton
            android:id="@+id/ibtn_cat_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_category_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="55dp"
        android:layout_marginHorizontal="10dp"
        >
        <GridView
            android:id="@+id/gv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"

            android:numColumns="4" >
        </GridView>



    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#c4c2ff"
        />
</RelativeLayout>