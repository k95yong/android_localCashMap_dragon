<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/ibtn_searched_to_main"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:fontFamily="@font/nanumbarungothicbold"
            android:id="@+id/tv_cat_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginTop="15dp"
            android:text="카테고리"
            android:textSize="18dp"
            android:textColor="#5f58ff"
            android:textAlignment="center"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_choose_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/toggle_back"
        android:paddingLeft="23dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reverse_triangle"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:fontFamily="@font/nanumbarungothic"
            android:id="@+id/order_principle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리순"
            android:textColor="#5f58ff"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"

            />


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>