<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pop_top"

        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/pop_img"
        android:layout_gravity="center_horizontal"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_event_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pop_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
    </ScrollView>



    <LinearLayout
        android:id="@+id/ll_pop_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="15dp"
        >

        <Button
            android:id="@+id/btn_not_open_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pop_img_btn"
            android:fontFamily="@font/nanumbarungothic"
            android:text="오늘하루 열지않기"
            android:textColor="#707070"
            />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pop_img_btn"
            android:fontFamily="@font/nanumbarungothic"
            android:text="닫기"
            android:textColor="#707070"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="275dp"
        android:layout_height="13dp"
        android:src="@drawable/pop_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
</LinearLayout>